<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/FBimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:scaleType="fitCenter"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/FBheadLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FBimg"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            tools:text="Headline" />

        <TextView
            android:id="@+id/FBdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FBheadLine"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="7"
            tools:text="details" />

        <TextView
            android:id="@+id/FBUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FBdetails"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            tools:text="User" />

        <TextView
            android:id="@+id/FBdateShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FBUser"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="31/03/2022" />

        <TextView
            android:id="@+id/View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FBdateShow"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="View" />

        <LinearLayout
            android:id="@+id/editfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/View"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editicon"
                android:layout_width="193dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageView
                android:id="@+id/deleteicon"
                android:layout_width="183dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>